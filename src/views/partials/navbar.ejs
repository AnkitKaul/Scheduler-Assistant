<!-- Fixed navbar -->
<header class="header">
  <nav class="p-3 navbar navbar-expand-lg navbar-light fixed-top bg-white">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item home 
            <% if (page === 'home') { %>
            active
            <% } %>
          ">
            <a class="nav-link" href="/">Home</a>
          </li>
          <% if (type === "staff") { %>
            <li class="nav-item
            <% if (page === 'create') { %>
            active
            <% } %>
          ">
              <a class="nav-link" href="/event/create">Create Class</a>
            </li>
            <li class="nav-item 
            <% if (page === 'manage-events') { %>
            active
            <% } %>
          ">
              <a class="nav-link" href="/manage-events">Manage Class Details</a>
            </li>
            <% } %>
              <% if (type) { %>
                <li class="nav-item 
            <% if (page === 'booked-events') { %>
            active
            <% } %>
          ">
                  <a class="nav-link" href="/booked-events">Scheduled Class</a>
                </li>
                <% } %>
        </ul>
        
        <% if (username) { %>
          <ul class="navbar-nav">
            <li class="nav-item dropdown mt-2 mt-lg-0">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                aria-expanded="false">
                <%= username %>
              </a>
              <% const activityLink = `/user/${username}/activity`; %>
              <% const profileLink = `/user/${username}`; %>              
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="<%= profileLink %>">Profile</a>
                  <a class="dropdown-item" href="<%= activityLink %>">Activity Log</a>
                  <a class="dropdown-item" href="/sign-out">Sign Out</a>
                </div>
            </li>
          </ul>
          <% } else { %>
            <ul class="navbar-nav">
              <li class="nav-item
                <% if (page === 'register') { %>
                active
                <% } %>
              ">
                <a class="nav-link ml-lg-2 mt-2 mt-lg-0" href="/register">Register</a>
              </li>
              <li class="nav-item
                <% if (page === 'sign-in') { %>
                active
                <% } %>
              ">
                <a class="nav-link" href="/sign-in">Sign In</a>
              </li>
            </ul>
            <% } %>
      </div>
    </div>
  </nav>
</header>